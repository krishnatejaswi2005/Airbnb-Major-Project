<% layout("layouts/boilerplate.ejs") %>
<body>
	<div class="container">
		<div class="row justify-content-center">
			<div class="col-12 col-md-8 col-lg-6">
				<h3 class="text-center my-4">Add New Listing</h3>
				<form
					action="/listings"
					method="post"
					novalidate
					class="needs-validation"
					enctype="multipart/form-data"
				>
					<div class="mb-3">
						<label for="title" class="form-label">Title</label>
						<input
							type="text"
							name="listing[title]"
							placeholder="Enter the Title"
							class="form-control"
							required
						/>
						<div class="valid-feedback">Looks good!</div>
						<div class="invalid-feedback">Enter a nice Title!</div>
					</div>

					<div class="mb-3">
						<label for="URL" class="form-label">Upload Image</label>
						<input
							class="form-control"
							type="file"
							name="listing[image]"
							required
						/>
						<div class="valid-feedback">Uploaded!</div>
						<div class="invalid-feedback">Please upload an image.</div>
					</div>

					<div class="row">
						<div class="col-12 col-md-4 mb-3">
							<label for="price" class="form-label">Price</label>
							<input
								type="number"
								name="listing[price]"
								placeholder="Your Price"
								class="form-control"
								required
							/>
							<div class="invalid-feedback">What's the price?</div>
						</div>
						<div class="col-12 col-md-8 mb-3">
							<label for="location" class="form-label">Location</label>
							<input
								type="text"
								name="listing[location]"
								placeholder="City, State"
								class="form-control"
								required
							/>
							<div class="invalid-feedback">Where's the place?</div>
						</div>
					</div>

					<div class="mb-3">
						<label for="country" class="form-label">Country</label>
						<input
							type="text"
							name="listing[country]"
							placeholder="Country"
							class="form-control"
							required
						/>
						<div class="invalid-feedback">Country?</div>
					</div>

					<div class="mb-3">
						<label for="description" class="form-label">Description</label>
						<textarea
							name="listing[description]"
							placeholder="Describe your listing..."
							class="form-control"
							required
						></textarea>
						<div class="invalid-feedback">Please describe your listing</div>
					</div>

					<button class="btn btn-danger w-100 mb-3">Add Your Listing</button>
				</form>
			</div>
		</div>
	</div>
</body>

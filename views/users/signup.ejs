<% layout("layouts/boilerplate.ejs") %>
<div class="row mt-3">
	<div class="col-3 border offset-4">
		<form
			action="/signup"
			method="post"
			novalidate
			class="needs-validation p-3"
		>
			<h3>User Signup</h3>
			<label for="Username" class="form-label">Username</label>
			<input
				id="username"
				type="text"
				name="username"
				class="form-control"
				required
			/>
			<div class="valid-feedback">Looks good!</div>
			<div class="invalid-feedback">Username is mandatory!</div>
			<label for="email" class="form-label">Email</label>
			<input
				id="email"
				type="email"
				name="email"
				class="form-control"
				required
			/>
			<div class="invalid-feedback">Email is mandatory!</div>
			<label for="Password" class="form-label">Password</label>
			<input
				id="password"
				type="password"
				name="password"
				class="form-control"
				required
			/>
			<div class="invalid-feedback">Password is mandatory!</div>
			<button class="btn btn-primary mt-3 offset-4">Signup</button>
		</form>
	</div>
</div>
